<UserControl x:Class="WoWAddonUpdater.Controls.LogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WoWAddonUpdater.Controls"
             xmlns:properties="clr-namespace:WoWAddonUpdater.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TextBox IsReadOnly="True" Margin="2" Text="{Binding Source={x:Static properties:Settings.Default}, Path=Log, Mode=TwoWay}" Background="Transparent" Foreground="LightGray"/>
</UserControl>
